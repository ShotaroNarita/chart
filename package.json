{
  "name": "miomonchart",
  "version": "0.1.0",
  "description": "CLI tool for generating chart SVGs from YAML data",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "miomonchart": "dist/index.js"
  },
  "scripts": {
